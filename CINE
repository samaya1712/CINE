<body>
  <main class="wrap">
    <section class="card" id="step1">
      <h1 class="title">¬øQuieres ir al cine conmigo? üçø</h1>
      <p class="subtitle">Elige con sinceridad‚Ä¶ (pero el ‚ÄúNO‚Äù tiene consecuencias üòà)</p>

      <div class="row" id="buttonsRow">
        <button class="btn-yes" id="yesBtn" type="button">SI</button>
        <button class="btn-no" id="noBtn" type="button">NO</button>
      </div>
    </section>

    <section class="card hidden" id="step2">
      <h2 class="title">¬°Bien! üòç ¬øCu√°l peli escogemos?</h2>
      <p class="subtitle">Toca una opci√≥n:</p>

      <div class="movies">
        <button class="movie-btn" type="button" data-movie="Rio">üé¨ Rio</button>
        <button class="movie-btn" type="button" data-movie="Goat">üé¨ Goat</button>
        <button class="movie-btn" type="button" data-movie="El ni√±o y la garza">üé¨ El ni√±o y la garza</button>
      </div>

      <div class="final hidden" id="finalMsg"></div>
    </section>
  </main>

  <script>
    const step1 = document.getElementById("step1");
    const step2 = document.getElementById("step2");
    const yesBtn = document.getElementById("yesBtn");
    const noBtn  = document.getElementById("noBtn");
    const finalMsg = document.getElementById("finalMsg");

    // Tama√±o inicial del bot√≥n SI (en px) y crecimiento por cada NO
    let yesW = 160;
    let yesH = 52;
    let yesF = 18;

    // Cada NO lo infla bastante para que r√°pido domine la pantalla
    const growW = 80;
    const growH = 28;
    const growF = 4;

    function applyYesSize() {
      yesBtn.style.setProperty("--yesW", yesW + "px");
      yesBtn.style.setProperty("--yesH", yesH + "px");
      yesBtn.style.setProperty("--yesF", yesF + "px");
    }
    applyYesSize();

    function goToMovies() {
      step1.classList.add("hidden");
      step2.classList.remove("hidden");
      // Por si qued√≥ modo full screen
      yesBtn.classList.remove("fullscreen-yes");
    }

    // Si toca SI -> mostrar pel√≠culas
    yesBtn.addEventListener("click", () => {
      goToMovies();
    });

    // Si toca NO -> SI crece hasta ocupar toda la pantalla
    noBtn.addEventListener("click", () => {
      yesW += growW;
      yesH += growH;
      yesF += growF;

      applyYesSize();

      // Si el bot√≥n SI ya es suficientemente grande, lo ponemos full-screen
      const vw = window.innerWidth;
      const vh = window.innerHeight;

      // Cuando supere ~85% del ancho o ~70% del alto, lo hacemos pantalla completa
      if (yesW >= vw * 0.85 || yesH >= vh * 0.70) {
        yesBtn.classList.add("fullscreen-yes");
        noBtn.classList.add("hidden");
        // Opcional: cambiar el texto para rematar
        yesBtn.textContent = "S√ç√ç√ç üíö";
      }
    });

    // Selecci√≥n de pel√≠cula -> mostrar mensaje final
    document.querySelectorAll("[data-movie]").forEach(btn => {
      btn.addEventListener("click", () => {
        const movie = btn.dataset.movie;
        finalMsg.classList.remove("hidden");
        finalMsg.textContent =
          `Excelente opci√≥n (${movie}). Quedamos el s√°bado 28 de Febrero a las 7:00 P.M. para verla, ¬°no faltes! ‚ú®`;
      });
    });

    // Si cambia orientaci√≥n/tama√±o, mantenemos coherencia del full-screen
    window.addEventListener("resize", () => {
      if (yesBtn.classList.contains("fullscreen-yes")) {
        // Asegura pantalla completa
        yesBtn.style.width = "100vw";
        yesBtn.style.height = "100vh";
      }
    });
  </script>
</body>

